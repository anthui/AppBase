<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <gradient android:endColor="@color/btn_right_default" android:startColor="@color/btn_left_default" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <gradient android:endColor="@color/btn_right_pressed" android:startColor="@color/btn_left_pressed" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">

            <gradient android:endColor="@color/btn_right_enabled" android:startColor="@color/btn_right_enabled" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>