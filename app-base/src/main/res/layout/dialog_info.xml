<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_cancle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_info"
        android:minHeight="135dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_default_black"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/marge_left_default"
            android:paddingRight="@dimen/marge_left_default"
            android:paddingTop="10dp"
            android:textColor="@color/font_black_default"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_input"
            style="@style/et_input_default"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/marge_right_default"
            android:layout_weight="0.8"
            android:hint=""
            android:lines="1"
            android:paddingLeft="@dimen/marge_left_default"
            android:paddingRight="@dimen/marge_left_default"

            android:text=""
            android:textColor="@color/font_black_default"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_border_default"
            android:background="@color/border_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/font_gray_default"
                android:textSize="16sp" />

            <View style="@style/view_line_su" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="确定"
                android:textColor="@color/font_oriange_default"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>