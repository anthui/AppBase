<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_age"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_perssion"
        android:minHeight="105dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/str_permission_request"
            android:textColor="@color/font_black_default"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/tv_default_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/marge_left_default"
            android:paddingRight="@dimen/marge_left_default"
            android:text=""
            android:textSize="13sp" />


        <View style="@style/view_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/font_gray_default"
                android:textSize="16sp" />

            <View style="@style/view_line_su" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/font_oriange_default"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>