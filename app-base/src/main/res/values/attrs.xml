<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  *****************************流动布局************************-->
    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!--******************************************Banner********************************-->
    <declare-styleable name="AntBanner">
        <!-- 指示点容器背景 -->
        <attr name="banner_pointContainerBackground" format="reference|color" />
        <!-- 指示点背景 -->
        <attr name="banner_pointDrawable" format="reference" />
        <!-- 指示点容器左右内间距 -->
        <attr name="banner_pointContainerLeftRightPadding" format="dimension" />
        <!-- 指示点上下外间距 -->
        <attr name="banner_pointTopBottomMargin" format="dimension" />
        <!-- 指示点左右外间距 -->
        <attr name="banner_pointLeftRightMargin" format="dimension" />
        <!--是否显示指示器 默认为true-->
        <attr name="banner_pointShow" format="boolean" />
        <!--ViewPage距离左右的间距 显示3个的时候使用-->
        <attr name="banner_viewPage_margin_leftRight" format="dimension" />
        <!--viewPage高度 默认居中 占满父类空间-->
        <attr name="banner_viewPageHeight" format="dimension" />
        <!--是否为三个 页面 默认为false-->
        <attr name="banner_showThree" format="boolean" />
        <!--是否允许自动滚动 页面 默认为false-->
        <attr name="banner_auto_scro" format="boolean" />
        <!-- 指示点的位置 -->
        <attr name="banner_pointGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <!-- 自动轮播的时间间隔 -->
        <attr name="banner_pointAutoPlayInterval" format="integer" />
        <!-- 页码切换过程的时间长度 -->
        <attr name="banner_pageChangeDuration" format="integer" />
        <!-- 提示文案的文字颜色 -->
        <attr name="banner_tipTextColor" format="reference|color" />
        <!-- 提示文案的文字大小 -->
        <attr name="banner_tipTextSize" format="dimension" />
        <!--viewPager 内padding-->
        <attr name="banner_ViewPager_padding" format="dimension" />
    </declare-styleable>

    <!--***************************** 底部导航*************************-->
    <declare-styleable name="BottomTabBar">
        <!--BottomTabBar的整体背景-->
        <attr name="tab_bar_background" format="color" />
        <!--图片宽度-->
        <attr name="tab_img_width" format="dimension" />
        <!--图片高度-->
        <attr name="tab_img_height" format="dimension" />
        <!--文字尺寸-->
        <attr name="tab_font_size" format="dimension" />
        <!--tab高度-->
        <attr name="tab_height" format="dimension" />
        <!--图片文字间隔-->
        <attr name="tab_img_font_padding" format="dimension" />
        <!--下边距-->
        <!--<attr name="tab_padding_bottom" format="dimension" />-->
        <!--是否显示分割线-->
        <attr name="tab_isshow_divider" format="boolean" />
        <!--分割线高度-->
        <attr name="tab_divider_height" format="dimension" />
        <!--分割线背景-->
        <attr name="tab_divider_background" format="color" />
        <!--选中的颜色-->
        <attr name="tab_selected_color" format="color" />
        <!--未选中的颜色-->
        <attr name="tab_unselected_color" format="color" />
    </declare-styleable>

    <!--*********************************tablayout**********************-->
    <declare-styleable name="DotTabLayout">
        <!--指示器高度  默认6dp-->
        <!--<attr name="ddIndicatorHeight" format="dimension" />-->
        <!--指示器颜色 ，默认白色-->
        <!--<attr name="ddIndicatorColor" format="color" />-->
        <attr name="ddCenterAlign" format="boolean" />
        <!--指示器样式 ，默认0，滑动拉长-->
        <attr name="ddAnimatedIndicator" format="enum">
            <!--小圆点 滑动拉长-->
            <enum name="dachshund" value="0" />
            <!--小圆点滑动-->
            <enum name="pointMove" value="1" />
            <!--横线滑动-->
            <enum name="lineMove" value="2" />
            <!--小圆点渐变-->
            <enum name="pointFade" value="3" />
            <!--横线 渐变-->
            <enum name="lineFade" value="4" />
        </attr>
    </declare-styleable>

    <!--*****************************渐变进度 按钮***************************-->
    <declare-styleable name="ProgressButton">　　
        <attr name="backgrounds" format="color" />　　
        <attr name="foreground" format="color" />　
        <attr name="textcolor" format="color" />　　
        <attr name="max" format="integer" />　　
        <attr name="progress" format="integer" />　　
        <attr name="textSize" format="dimension" />　　
        <attr name="text" format="string" />
    </declare-styleable>

    <!--圆角  圆形图片-->
    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="radius" format="dimension" />
    </declare-styleable>
    <!--边角图片-->
    <declare-styleable name="YuanJiaoImageView">
        <attr name="round_type" format="enum">
            <enum name="round_top" value="1" />
            <enum name="round_bottom" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
    </declare-styleable>

    <!--支付密码-->
    <declare-styleable name="PwdTextView">
        <attr name="psw_size" format="dimension" />
        <attr name="psw_color" format="color" />
        <attr name="psw_count" format="integer" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <!--自动缩写的textview-->
    <declare-styleable name="AutoScaleTextView">
        <attr name="minTextSize" format="dimension" />
    </declare-styleable>
    <!--滑动按钮-->
    <declare-styleable name="SwitchButton">
        <attr name="kswThumbDrawable" format="reference" />
        <attr name="kswThumbColor" format="color|reference" />
        <attr name="kswThumbMargin" format="dimension|reference" />
        <attr name="kswThumbMarginTop" format="dimension|reference" />
        <attr name="kswThumbMarginBottom" format="dimension|reference" />
        <attr name="kswThumbMarginLeft" format="dimension|reference" />
        <attr name="kswThumbMarginRight" format="dimension|reference" />
        <attr name="kswThumbWidth" format="dimension|reference" />
        <attr name="kswThumbHeight" format="dimension|reference" />
        <attr name="kswThumbRadius" format="dimension|reference" />
        <attr name="kswBackRadius" format="dimension|reference" />
        <attr name="kswBackDrawable" format="reference" />
        <attr name="kswBackColor" format="color|reference" />
        <attr name="kswFadeBack" format="boolean" />
        <attr name="kswBackMeasureRatio" format="float" />
        <attr name="kswAnimationDuration" format="integer" />
        <attr name="kswTintColor" format="color|reference" />
        <attr name="kswTextOn" format="string" />
        <attr name="kswTextOff" format="string" />
        <attr name="kswTextMarginH" format="dimension" />
    </declare-styleable>
</resources>