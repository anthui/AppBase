<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <com.ant.app_views.RoundImageView
        android:id="@+id/iv_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/leak_canary_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type="circle" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="50dp"

        android:layout_height="wrap_content"
        android:lines="1"
        android:text="刚刚"
        app:layout_constraintBottom_toBottomOf="@id/tv_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_num" />
    dp

    <TextView
        android:id="@+id/tv_num"
        style="@style/tv_default_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="faheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehui"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@id/iv_pic"
        app:layout_constraintTop_toTopOf="@id/iv_pic" />

    <TextView
        android:id="@+id/tv_message"
        style="@style/tv_gray_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="faheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehuifaheuiwheuifhueiwhfuiehui"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic"
        app:layout_constraintStart_toEndOf="@id/iv_pic" />

    <View
        style="@style/view_line"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_num" />


</androidx.constraintlayout.widget.ConstraintLayout>